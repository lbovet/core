{
  "compilerOptions": {
    "target": "es5",
    "outDir": "spec-out/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "newLine": "LF"
  },
  "exclude": [
    "coverage",
    "custom_typings",
    "dist",
    "node_modules",
    "scripts",
    "spec-out",
    "src/__test__",
    "src/lib/__test__",
    "src/utils/__test__"
  ]
}
